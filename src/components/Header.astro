---
const { lang = "el" } = Astro.props;

const base = lang === "en" ? "/en" : "/el";
const path = Astro.url.pathname;

// Switch language while keeping the same route
const switchTo = path.startsWith("/en")
  ? path.replace(/^\/en/, "/el")
  : path.startsWith("/el")
    ? path.replace(/^\/el/, "/en")
    : "/el/";

const t = (elText, enText) => (lang === "en" ? enText : elText);

const nav = [
  { href: `${base}/`, label: t("Αρχική", "Home") },
  { href: `${base}/about`, label: t("Σχετικά", "About") },
  { href: `${base}/projects`, label: "Projects" },
  { href: `${base}/contact`, label: t("Επικοινωνία", "Contact") },
];
---

<header class="sticky top-0 z-50 border-b border-slate-200 bg-white/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 sm:px-6 lg:px-8">
    <a href={`${base}/`} class="flex items-center gap-2 font-semibold tracking-tight">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl border border-slate-200 bg-slate-50">LT</span>
      <span>{t("Λουκάς Θέος", "Loukas Theos")}</span>
    </a>

    <nav class="hidden items-center gap-6 md:flex">
      {nav.map((item) => (
        <a href={item.href} class="text-sm font-medium text-slate-700 hover:text-slate-950">
          {item.label}
        </a>
      ))}
      <a href={switchTo} class="rounded-xl border border-slate-200 px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50">
        {lang === "en" ? "EL" : "EN"}
      </a>
    </nav>

    <details class="md:hidden">
      <summary class="cursor-pointer list-none rounded-xl border border-slate-200 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">
        {t("Μενού", "Menu")}
      </summary>
      <div class="mt-2 rounded-2xl border border-slate-200 bg-white p-3 shadow-sm">
        <nav class="flex flex-col gap-2">
          {nav.map((item) => (
            <a href={item.href} class="rounded-xl px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">
              {item.label}
            </a>
          ))}
          <a href={switchTo} class="mt-2 rounded-xl border border-slate-200 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">
            {t("Αλλαγή γλώσσας", "Switch language")}: {lang === "en" ? "EL" : "EN"}
          </a>
        </nav>
      </div>
    </details>
  </div>
</header>
