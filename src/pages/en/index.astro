---
import Layout from "../../layouts/Layout.astro";
import Welcome from "../../components/Welcome.astro";
import AboutCards from "../../components/AboutCards.svelte";
import ProjectsShowcase from "../../components/ProjectsShowcase.svelte";
import ContactSection from "../../components/ContactSection.svelte";
import { ABOUT } from "../../data/about";

const about = ABOUT.en;
---

<Layout
  lang="en"
  title="Loukas Theos | Portfolio"
  description="Portfolio for WebEleven with Astro + Svelte + Tailwind."
>
 <Welcome
  title="Hi, I’m Loukas. I build modern web experiences."
  tagline="Full Stack Developer | BSc Computer Science | MSc Artificial Intelligence & Machine Learning Student"
  ctaPrimaryHref="#contact"
  ctaPrimaryLabel="Contact"
  ctaSecondaryHref="/Loukas_Theos_CV_2025.pdf"
  ctaSecondaryLabel="Download CV"
/>


  <AboutCards
    client:load
    id="about"
    title="About"
    subtitle="A quick snapshot: who I am, where I want to be in 5 years, and what I liked most in interview."
    cards={about.cards}
  />

  <ProjectsShowcase
    client:load
    id="projects"
    title="Projects"
    subtitle="Here you’ll find some of my projects. You can use the filters to get more targeted results."
    viewAllHref="/en/projects"
    projects={[
  {
    title: "NFT Marketplace",
    description: "Mint, list, and buy NFTs with a clean frontend + smart contract flow.",
    tags: ["Web3", "React", "Solidity"],
    href: "/en/projects",
    details: "Wallet connection, metadata handling, listing, buying, and clean UI feedback patterns."
  },
  {
    title: "AI Pneumonia Detection",
    description: "CNN models + explainability (Grad-CAM) for chest X-ray classification.",
    tags: ["Deep Learning", "Python", "XAI"],
    href: "/en/projects",
    details: "Focus on evaluation metrics, model comparison, and explainable AI visualization."
  },
  {
    title: "World Data Dashboard",
    description: "Interactive dashboard with maps and charts for global insights.",
    tags: ["JavaScript", "DataViz", "UI/UX"],
    href: "/en/projects",
    details: "Filters, responsive layout, and clean metric presentation with a UX-first approach."
  },
  {
    title: "Smart Inventory Tracker",
    description: "Mock web app for inventory tracking with search, filters, and reports.",
    tags: ["Full Stack", "SQL", "Product"],
    href: "/en/projects",
    details: "CRUD flows, sorting/filtering, and a structure ready to connect to a real API later."
  }
]}

  />

  <ContactSection
    client:load
    id="contact"
    title="Contact"
    subtitle="Want a site that looks premium and feels fast? Send me a message."
    email="loukas.theos@outlook.com"
    location="Athens, Greece"
  />
</Layout>
